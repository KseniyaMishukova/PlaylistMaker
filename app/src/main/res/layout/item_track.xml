<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_track_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorSurface"
    android:paddingStart="@dimen/track_cover_margin_start"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="@dimen/track_cover_size"
        android:layout_height="@dimen/track_cover_size"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_zig"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvTrackName"
        style="@style/YsRegularTitle"
        android:layout_width="@dimen/track_title_width"
        android:layout_height="@dimen/track_title_height"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivCover"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/track_title_margin_top" />

    <TextView
        android:id="@+id/tvArtist"
        style="@style/YsRegularMeta"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_artist_height"
        
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="@id/tvTrackName"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName" />

    <ImageView
        android:id="@+id/ellipse_1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ellipse_1"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:layout_marginEnd="@dimen/separator_margin_end"
        app:layout_constraintStart_toEndOf="@id/tvArtist"
        app:layout_constraintEnd_toStartOf="@id/tvTime"
        app:layout_constraintTop_toTopOf="@id/tvArtist"
        app:layout_constraintBottom_toBottomOf="@id/tvArtist" />

    <TextView
        android:id="@+id/tvTime"
        style="@style/YsRegularMeta"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_time_height"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/ellipse_1"
        app:layout_constraintTop_toTopOf="@id/tvArtist" />

    <ImageView
        android:id="@+id/ivChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right"
        app:tint="@color/chevron_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@null" />
</androidx.constraintlayout.widget.ConstraintLayout>