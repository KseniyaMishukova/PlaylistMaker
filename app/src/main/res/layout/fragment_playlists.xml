<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="133dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_playlist"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/new_playlist"
            android:textAppearance="@style/retry_labels"
            android:textColor="@color/text_name"
            android:gravity="center"
            android:textAlignment="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/il_search_l"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:clipToOutline="true"
        android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/light_mode"
            android:contentDescription="@null"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/some_id"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:text="@string/empty_playlists"
        android:textAppearance="@style/some_id"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center_horizontal|top" />

</RelativeLayout>