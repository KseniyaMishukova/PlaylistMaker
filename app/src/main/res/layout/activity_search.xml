<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:title="@string/title"
        app:titleTextColor="?attr/colorOnSurface"
        app:contentInsetStart="60dp"
        android:layout_marginBottom="24dp"
        app:titleTextAppearance="@style/SettingsTitleStyle"/>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/icon_size_settings"
        android:layout_height="@dimen/icon_size_settings"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/back_button"
        android:src="@drawable/outline_arrow_back_24"
        app:tint="?attr/colorOnSurface"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="-64dp"/>


    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/x_base_sear">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/search_field_background"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/search_icon_margin_start"
                    android:contentDescription="@string/search_description"
                    android:src="@drawable/ic_search"
                    app:tint="@color/search_icon_tint" />

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/search_text_margin_start"
                    android:layout_marginEnd="@dimen/search_text_margin_end"
                    android:fontFamily="@font/ys_display_regular"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:imeOptions="actionDone"
                    android:padding="0dp"
                    android:textColor="@color/search_text_color"
                    android:textColorHint="@color/search_hint_color"
                    android:autofillHints="text" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/clear_button"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_x"
            app:tint="@color/search_text_color1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:contentDescription="@string/clear_search_description" />
    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/history_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/ys_medium_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="12dp"
                android:text="@string/ys_medium_1"
                android:textAppearance="@style/ys_medium_1_bold_center"
                android:gravity="center_horizontal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />

            <RelativeLayout
                android:id="@+id/button1"
                android:layout_width="148dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_history">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/label"
                    android:textAppearance="@style/label"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <RelativeLayout
            android:id="@+id/il_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="114dp"
            android:clipToOutline="true"
            android:visibility="gone">
            <ImageView
                android:id="@+id/il_search_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_mode"
                android:contentDescription="@null"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_placeholder_empty"
            android:layout_width="312dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:text="@string/some_id"
            android:textAppearance="@style/some_id"
            android:textColor="@color/search_placeholder_text"
            android:gravity="center_horizontal|top"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/il_internet"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="114dp"
            android:clipToOutline="true"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_mode_1"
                android:contentDescription="@null"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_placeholder_error"
            android:layout_width="312dp"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:text="@string/search_error_text"
            android:textAppearance="@style/search_error_text"
            android:textColor="@color/search_error_text_color"
            android:textAlignment="center"
            android:gravity="center_horizontal|top"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/btn_retry"
            android:layout_width="91dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="362dp"
            android:background="@drawable/button"
            android:visibility="gone">
            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/retry_label"
                android:textAppearance="@style/retry_label"
                android:textAlignment="center"
                android:gravity="center"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>