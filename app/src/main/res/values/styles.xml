<?xml version="1.0" encoding="utf-8"?>
 <resources>

     <style name="MainTitleStyle">
         <item name="android:textSize">@dimen/title_text_size</item>
         <item name="android:textColor">@color/white</item>
         <item name="android:textStyle">bold</item>
         <item name="android:fontFamily">@font/ys_display_medium</item>
     </style>


    <style name="MainCardTextStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
         <item name="android:textSize">@dimen/card_text_size</item>
         <item name="android:textColor">@color/text_black</item>
         <item name="android:textStyle">bold</item>
         <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
     </style>


     <style name="SettingsTitleStyle">
         <item name="android:textSize">22sp</item>
         <item name="android:textColor">?attr/colorOnSurface</item>
         <item name="android:fontFamily">@font/ys_display_medium</item>
     </style>


     <style name="SettingsTextStyle">
         <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
         <item name="android:fontFamily">@font/ys_display_regular</item>
     </style>


     <style name="TitleTextStyle">
         <item name="android:textSize">28sp</item>
         <item name="android:textColor">@color/white</item>
         <item name="android:textStyle">bold</item>
     </style>


     <style name="CardTextStyle">
         <item name="android:textSize">18sp</item>
         <item name="android:textColor">@color/text_black</item>
         <item name="android:textStyle">bold</item>
     </style>

      <style name="SettingsItemStyle">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:paddingHorizontal">16dp</item>
         <item name="android:paddingVertical">20dp</item>
         <item name="android:textSize">16sp</item>
         <item name="android:textColor">@color/text_black</item>
         <item name="android:gravity">center_vertical</item>
     </style>

     <style name="ClearButtonStyle">
         <item name="android:textSize">20sp</item>
         <item name="android:textColor">@color/clear_button_color</item>
         <item name="android:gravity">center</item>
     </style>

    <style name="YsRegularTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="YsRegularMeta">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/onSurfaceSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="search_error_text">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">22sp</item>
    </style>

    <style name="retry_label">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/retry_label_color</item>
    </style>

    <style name="retry_labels">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/historyTitle</item>
    </style>

    <style name="ys_medium_1">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/historyTitle</item>
    </style>

    <style name="label">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:textColor">@color/historyButtonText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ys_medium_1_bold_center">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:textColor">@color/historyTitle</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="yesterday_r">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_title</item>
    </style>

    <style name="the_beatles">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_artist</item>
    </style>

    <style name="PlayerMetaValue">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/player_meta_value</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlayerHeaderBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:gravity">top</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <style name="tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
</resources>